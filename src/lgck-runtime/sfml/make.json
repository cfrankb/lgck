{
    "target": "build/lgck-runtime-sfml",
    "cxx": "g++",
    "linux": {
        "output" : "makefile",
        "paths" : [
            ".",
            "../shared",
            "/usr/include"
        ],
        "libs" : [
            "z",
            "m",
            "pthread",
            "lua5.2",
            "SDL2",
            "SDL2_mixer",
            "sfml-graphics",
            "sfml-window",
            "sfml-system",
            "X11"
        ],
        "flags" : ["-m64", "-std=c++0x", "-O3", "-fPIE", "-Wall"]
    },
    "win32": {
        "output" : "make.bat",
        "paths" : [
            "../shared",
            "../../../redist/include"
        ],
        "libs" : [
            "-L../../../redist/lib/static",
            "-static",
            "-lmingw32",
            "-lSDL2main -lSDL2 -lSDL2_mixer -lsfml-main -lsfml-graphics-s -lsfml-window-s -lsfml-system-s",
            "-lm -ldinput8 -ldxguid -ldxerr8 -luser32 -lgdi32 -lwinmm -limm32 -lole32 -loleaut32 -lshell32",
            "-lversion -luuid -llua -lz -lvorbisenc -lvorbisfile -lvorbis -logg -static-libgcc"
        ],
        "flags" : ["-std=gnu++11", "-O3", "-Wall"]
    },
    "sources": [
        "sfml/main.cpp",
        "../shared/*.cpp",
        "../shared/implementers/sdl/*.cpp",
        "../shared/implementers/sfml/*.cpp",
        "../shared/inputs/*.cpp",
        "../shared/inputs/sfml/*.cpp",
        "build/lgck_res.cpp"
    ],
    "exclude": ["stdafx", "zlib", "vlamits3"],
    "obj_dir": "build/sfml",
    "declare" : []
}
