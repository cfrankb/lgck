{
    "target": "sfml/lgck-runtime",
    "cxx": "g++",
    "linux": {
        "output" : "makefile",
        "paths" : [
            ".",
            "../shared",
            "/usr/include"
        ],
        "libs" : [
            "z",
            "m",
            "pthread",
            "lua5.2",
            "SDL2",
            "SDL2_mixer",
            "sfml-graphics",
            "sfml-window",
            "sfml-system",
            "X11"
        ],
        "flags" : ["-m64", "-std=c++0x", "-O3", "-fPIE", "-Wall"]
    },
    "win32": {
        "output" : "make.bat",
        "paths" : [
            "../shared",
            "../../../redist/include"
        ],
        "libs" : [
            "L../../../redist/lib",
            "L../../../redist/lib/sdl2-204",
            "L../../../redist/lib/sfml",
            "lz",
            "lm",
            "llua52",
            "lSDL2",
            "lSDL2_mixer",
            "lsfml-main",
            "lsfml-graphics",
            "lsfml-window",
            "lsfml-system"
        ],
        "flags" : ["-std=gnu++11", "-O3", "-Wall"]
    },
    "sources": [
        "sfml/main.cpp",
        "../shared/*.cpp",
        "../shared/implementers/sdl/*.cpp",
        "../shared/implementers/sfml/*.cpp",
        "../shared/inputs/*.cpp",
        "../shared/inputs/sfml/*.cpp",
        "shared/lgck_res.cpp"
    ],
    "exclude": ["stdafx", "zlib", "vlamits3"],
    "obj_dir": "target/sfml",
    "declare" : []
}
