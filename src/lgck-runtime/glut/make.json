{
    "target": "build/lgck-runtime-glut",
    "cxx": "g++",
    "linux": {
        "output" : "makefile",
        "paths" : [
            ".",
            "../shared",
            "/usr/include"
        ],
        "libs" : [
            "z",
            "m",
            "pthread",
            "lua5.2",
            "SDL2",
            "SDL2_mixer",
            "GL",
            "X11",
            "GLU",
            "glut"
        ],
        "flags" : ["-m64", "-std=c++0x", "-O3", "-fPIE", "-Wall"]
    },
    "win32": {
        "output" : "make.bat",
        "paths" : [
            "../shared",
            "../../../redist/include"
        ],
        "libs" : [
            "L../../../redist/lib/sdl2-204",
            "L../../../redist/lib",
            "lz",
            "lm",
            "llua52",
            "lSDL2",
            "lSDL2_mixer",
            "lopengl32",
            "lglu32",
            "lfreeglut"
        ],
        "flags" : ["-std=gnu++11", "-O3", "-Wall"]
    },
    "sources": [
        "glut/main.cpp",
        "../shared/*.cpp",
        "../shared/implementers/opengl/*opengl.cpp",
        "../shared/implementers/sdl/sn_sdl.cpp",
        "../shared/implementers/sdl/mu_sdl.cpp",
        "../shared/interfaces/*.cpp",
        "../shared/inputs/*.cpp",
        "../shared/inputs/glut/*.cpp",
        "build/lgck_res.cpp"
    ],
    "exclude": ["stdafx", "zlib", "vlamits3"],
    "obj_dir": "target/glut",
    "declare" : []
}
